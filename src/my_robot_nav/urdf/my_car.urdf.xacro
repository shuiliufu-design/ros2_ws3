<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <!-- Base Footprint (ROOT) -->
  <link name="base_footprint">
    <visual>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
    <inertial>
      <mass value="0.001"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.2655" length="0.02441"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.02441"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.035" ixy="0" ixz="0" iyy="0.035" iyz="0" izz="0.07"/>
    </inertial>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.04667" rpy="0 0 0"/>
  </joint>

  <!-- Base Up Link -->
  <link name="baseup_link">
    <visual>
      <geometry>
        <cylinder radius="0.2355" length="0.03136"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.2355" length="0.03136"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.014" ixy="0" ixz="0" iyy="0.014" iyz="0" izz="0.027"/>
    </inertial>
  </link>

  <joint name="baseup_joint" type="fixed">
    <parent link="base_link"/>
    <child link="baseup_link"/>
    <origin xyz="0 0 0.04068" rpy="0 0 0"/>
  </joint>

  <!-- Wheel Macro -->
  <xacro:macro name="omni_wheel" params="wheel_name x y z roll pitch yaw">
    <link name="${wheel_name}">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.03804"/>  
        </geometry>
        <!-- Rotate cylinder so axis (Z) aligns with Y -->
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.03804"/>
        </geometry>
        <!-- Collision follows Physics (Parallel) for smooth rolling -->
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.0006"/>
      </inertial>
    </link>

    <joint name="joint_${wheel_name}" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:omni_wheel wheel_name="Rear_Left" x="-0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Right" x="0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Left" x="0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>
  <xacro:omni_wheel wheel_name="Rear_Right" x="-0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>

  <!-- Lidar Link -->
  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03785" length="0.0413"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03785" length="0.0413"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="baseup_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.137 0 0.0335" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo Plugins and Sensors -->
  <gazebo>
    <!-- Drive Control Only (Odom is inaccurate for X-Drive) -->
    <plugin
      filename="ignition-gazebo-mecanum-drive-system"
      name="ignition::gazebo::systems::MecanumDrive">
      <front_left_joint>joint_Front_Left</front_left_joint>
      <front_right_joint>joint_Front_Right</front_right_joint>
      <back_left_joint>joint_Rear_Left</back_left_joint>
      <back_right_joint>joint_Rear_Right</back_right_joint>
      <wheel_separation>0.3684</wheel_separation>
      <wheelbase>0.3684</wheelbase>
      <wheel_radius>0.05</wheel_radius>
      <min_acceleration>-10</min_acceleration>
      <max_acceleration>10</max_acceleration>
      <topic>cmd_vel</topic>
      <!-- Disable Plugin Odom by diverting to trash topics -->
      <odom_topic>odom_trash</odom_topic>
      <tf_topic>tf_trash</tf_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>

    <!-- Ground Truth Odometry (Perfect Localization) -->
    <plugin
      filename="ignition-gazebo-odometry-publisher-system"
      name="ignition::gazebo::systems::OdometryPublisher">
      <odom_frame>odom</odom_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odom_topic>odometry</odom_topic>
      <tf_topic>tf</tf_topic>
      <dimensions>2</dimensions> <!-- 2D Odom -->
      <odom_publish_frequency>50</odom_publish_frequency>
    </plugin>
    
    <plugin
      filename="ignition-gazebo-joint-state-publisher-system"
      name="ignition::gazebo::systems::JointStatePublisher">
      <topic>/joint_states</topic>
    </plugin>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <topic>/scan</topic>
      <update_rate>10</update_rate>
      <gz_frame_id>lidar_link</gz_frame_id>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>0.01</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.15</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
    </sensor>
  </gazebo>

</robot>