<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.2655" length="0.02441"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.04667" rpy="0 0 0"/>
  </joint>

    <link name="baseup_link">
    <visual>
      <geometry>
        <cylinder radius="0.2355" length="0.03136"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="baseup_joint" type="fixed">
    <parent link="base_link"/>
    <child link="baseup_link"/>
    <origin xyz="0 0 0.04068" rpy="0 0 0"/> </joint>

  <xacro:macro name="omni_wheel" params="wheel_name x y z roll pitch yaw">
    <link name="${wheel_name}">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.03804"/>  
        </geometry>
        <!-- Rotate cylinder so axis (Z) aligns with Y -->
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <material name="black"/>
      </visual>
    </link>

    <joint name="joint_${wheel_name}" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="1 0 0"/>
    </joint>
  </xacro:macro>

  <xacro:omni_wheel wheel_name="Rear_Left" x="-0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Right" x="0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Left" x="0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>
  <xacro:omni_wheel wheel_name="Rear_Right" x="-0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>

  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03785" length="0.0413"/>  </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="baseup_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.137 0 0.0335" rpy="0 0 0"/>
  </joint>

  <link name="Stepper_link">
    <visual>
      <geometry>
        <cylinder radius="0.005" length="0.006"/>  </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="Stepper_joint" type="continuous">
    <parent link="baseup_link"/>
    <child link="Stepper_link"/>
    <origin xyz="0 0 0.23" rpy="1.5708 0 0"/>  <axis xyz="0 0 1"/>
  </joint>


  <link name="platform_link">
    <visual>
      <geometry>
        <box size="0.2 0.26 0.006"/>  </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="platform_joint" type="prismatic">
    <parent link="baseup_link"/>
    <child link="platform_link"/>
    <origin xyz="0.2215 0 0.3246" rpy="0 0 0"/>  <axis xyz="0 0 1"/>  <limit lower="0.0" upper="0.4" effort="50.0" velocity="0.1"/>  </joint>

  <xacro:include filename="$(find robot_description)/urdf/rx200.urdf.xacro" />
    <joint name="rx200_mount_joint" type="fixed">
    <parent link="platform_link"/>
    <child link="rx200/base_link"/>  <origin xyz="0 0 0.003" rpy="0 0 0"/>  </joint>



<xacro:include filename="_d435i.urdf.xacro" />

  <xacro:sensor_d435i parent="base_link" name="camera" use_nominal_extrinsics="false">
    <origin xyz="0.154 0 0.749" rpy="0 0 0"/>
  </xacro:sensor_d435i>



</robot>

