<?xml version="1.0"?>
<robot name="omni_robot" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>


  <link name="base_footprint"/>

  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.2655" length="0.02441"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.04667" rpy="0 0 0"/>
  </joint>

    <link name="baseup_link">
    <visual>
      <geometry>
        <cylinder radius="0.2355" length="0.03136"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="baseup_joint" type="fixed">
    <parent link="base_link"/>
    <child link="baseup_link"/>
    <origin xyz="0 0 0.04068" rpy="0 0 0"/> </joint>

  <xacro:macro name="omni_wheel" params="wheel_name x y z roll pitch yaw">
    <link name="${wheel_name}">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.03804"/>  
        </geometry>
        <!-- Rotate cylinder so axis (Z) aligns with Y -->
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <material name="black"/>
      </visual>
    </link>

    <joint name="joint_${wheel_name}" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_name}"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="1 0 0"/>
    </joint>
  </xacro:macro>

  <xacro:omni_wheel wheel_name="Rear_Left" x="-0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Right" x="0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="+0.785398"/>
  <xacro:omni_wheel wheel_name="Front_Left" x="0.1842" y="0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>
  <xacro:omni_wheel wheel_name="Rear_Right" x="-0.1842" y="-0.1842" z="0" roll="0" pitch="0" yaw="-0.785398"/>

  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03785" length="0.0413"/>  </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="baseup_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.137 0 0.077" rpy="0 0 0"/>
  </joint>

  <!-- >>> NEW LASER FRAME <<< -->
  <link name="laser">
    <!-- simple inertial so URDF is valid; values are tiny -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia
        ixx="1e-6" ixy="0" ixz="0"
        iyy="1e-6" iyz="0"
        izz="1e-6"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.02"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="lidar_link"/>
    <child link="laser"/>
    <!-- if the scan origin is not exactly the same as lidar_link, adjust xyz/rpy here -->
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <!-- <<< END LASER FRAME >>> -->

  <xacro:include filename="$(find robot_description)/urdf/vision_voice/realsense_camera/_d435i.urdf.xacro" />

    <xacro:sensor_d435i parent="baseup_link" name="camera" use_nominal_extrinsics="true">
      <origin xyz="0.149 0 0.984" rpy="0 0.52255 0"/>
    </xacro:sensor_d435i>
</robot>

